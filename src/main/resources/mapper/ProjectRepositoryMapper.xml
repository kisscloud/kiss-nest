<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 定义一个映射配置文件的根节点 -->
<!-- namespace 属性用来定义配置命名空间， 主要进行 session 级别的缓存管理 -->
<!-- namespace 默认使用当前操作实体类的全路径 -->
<mapper namespace="com.kiss.kissnest.mapper.ProjectRepositoryMapper">

    <insert id="createProjectRepository" parameterType="com.kiss.kissnest.entity.ProjectRepository">
        insert into projectrepository (teamId,name,projectId,repositoryId,sshUrl,httpUrl,pathWithNamespace,branchCount,operatorId,operatorName)
        value
        (#{teamId},#{name},#{projectId},#{repositoryId},#{sshUrl},#{httpUrl},#{pathWithNamespace},#{branchCount},#{operatorId},#{operatorName})
    </insert>
    
    <select id="getProjectRepositoryByProjectId" parameterType="java.lang.Integer" resultType="com.kiss.kissnest.entity.ProjectRepository">
        select * from projectrepository where projectId = #{projectId};
    </select>

    <select id="getProjectRepositoryByTeamId" parameterType="java.lang.Integer" resultType="com.kiss.kissnest.entity.ProjectRepository">
        select * from projectrepository where teamId = #{teamId};
    </select>
</mapper>